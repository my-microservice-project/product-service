{
    "openapi": "3.0.0",
    "info": {
        "title": "Product Service",
        "description": "Product API Documentation",
        "contact": {
            "email": "bugrabozkurtt@gmail.com"
        },
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        },
        "version": "1.0.0"
    },
    "paths": {
        "/api/v1/products": {
            "post": {
                "tags": [
                    "Product"
                ],
                "summary": "Create or Update Products",
                "operationId": "950c326315ed6dd27d4e4e59413f4203",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "array",
                                "items": {
                                    "properties": {
                                        "name": {
                                            "type": "string",
                                            "example": "iPhone 15 Pro"
                                        },
                                        "category": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "price": {
                                            "type": "number",
                                            "format": "float",
                                            "example": 1299.99
                                        },
                                        "stock": {
                                            "type": "integer",
                                            "example": 50
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "202": {
                        "description": "Products have been queued for processing."
                    }
                }
            }
        },
        "/api/v1/products/search": {
            "get": {
                "tags": [
                    "Product"
                ],
                "summary": "Search Products",
                "operationId": "9d491d9a769ba3d2f650a1fd8f07f0f3",
                "parameters": [
                    {
                        "name": "query",
                        "in": "query",
                        "description": "Performs a keyword search",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "category",
                        "in": "query",
                        "description": "Filter by Category ID",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "min_price",
                        "in": "query",
                        "description": "Filter by minimum price",
                        "required": false,
                        "schema": {
                            "type": "number",
                            "format": "float",
                            "example": 1000
                        }
                    },
                    {
                        "name": "max_price",
                        "in": "query",
                        "description": "Filter by maximum price",
                        "required": false,
                        "schema": {
                            "type": "number",
                            "format": "float",
                            "example": 5000
                        }
                    },
                    {
                        "name": "min_stock",
                        "in": "query",
                        "description": "Filter by minimum stock quantity",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "example": 10
                        }
                    },
                    {
                        "name": "max_stock",
                        "in": "query",
                        "description": "Filter by maximum stock quantity",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "example": 100
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Search results returned successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Search results retrieved successfully."
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/ProductDTO"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid search query"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "ProductDTO": {
                "title": "Product Data Transfer Object",
                "description": "Product information",
                "properties": {
                    "id": {
                        "description": "Unique identifier of the product, optional.",
                        "type": "integer",
                        "example": 28,
                        "nullable": true
                    },
                    "name": {
                        "description": "Product name. If not provided, 'description' or a default value is used.",
                        "type": "string",
                        "example": "iPhone 15 Pro",
                        "nullable": true
                    },
                    "description": {
                        "description": "Product description. If 'name' is missing, this value is used.",
                        "type": "string",
                        "example": "Apple's latest model",
                        "nullable": true
                    },
                    "category": {
                        "description": "Category ID of the product.",
                        "type": "integer",
                        "example": 1
                    },
                    "price": {
                        "description": "Price of the product.",
                        "type": "number",
                        "format": "float",
                        "example": 1299.99
                    },
                    "stock": {
                        "description": "Stock quantity of the product.",
                        "type": "integer",
                        "example": 50
                    }
                },
                "type": "object"
            },
            "ProductElasticDTO": {
                "title": "Product Elastic Data Transfer Object",
                "description": "Data structure for indexing a product in Elasticsearch",
                "properties": {
                    "index": {
                        "description": "Elasticsearch index name.",
                        "type": "string",
                        "example": "products"
                    },
                    "id": {
                        "description": "Unique identifier for the product document in Elasticsearch.",
                        "type": "string",
                        "example": "abc123"
                    },
                    "body": {
                        "$ref": "#/components/schemas/ProductDTO"
                    }
                },
                "type": "object"
            },
            "ProductSearchDTO": {
                "title": "Product Search Data Transfer Object",
                "description": "Data structure for searching products",
                "properties": {
                    "query": {
                        "description": "Keyword to search for in product names or descriptions.",
                        "type": "string",
                        "example": "iPhone"
                    },
                    "category": {
                        "description": "Filter by category ID.",
                        "type": "integer",
                        "example": 1,
                        "nullable": true
                    },
                    "min_price": {
                        "description": "Minimum price filter.",
                        "type": "number",
                        "format": "float",
                        "example": 1000,
                        "nullable": true
                    },
                    "max_price": {
                        "description": "Maximum price filter.",
                        "type": "number",
                        "format": "float",
                        "example": 5000,
                        "nullable": true
                    },
                    "min_stock": {
                        "description": "Minimum stock quantity filter.",
                        "type": "integer",
                        "example": 10,
                        "nullable": true
                    },
                    "max_stock": {
                        "description": "Maximum stock quantity filter.",
                        "type": "integer",
                        "example": 100,
                        "nullable": true
                    }
                },
                "type": "object"
            },
            "SyncProductStockDTO": {
                "title": "Sync Product Stock Data Transfer Object",
                "description": "Data structure for synchronizing product stock",
                "properties": {
                    "product_id": {
                        "description": "Unique identifier of the product.",
                        "type": "integer",
                        "example": 101
                    },
                    "stock": {
                        "description": "Updated stock quantity of the product.",
                        "type": "integer",
                        "example": 50
                    }
                },
                "type": "object"
            }
        }
    },
    "tags": [
        {
            "name": "Product",
            "description": "Product"
        }
    ]
}